TextBetween
{
	_s = _argv[0];
	_begin = _argv[1];
	_end = _argv[2];
	_idx = 0;
	if _argc > 3 {
		_idx = _argv[3];
	}
	_d = _s[_idx + 1,_begin];
	_d = _d[0,_end];
	_d;
}

TextBetween2
{
	_s = _argv[0];
	_begin = _argv[1];
	_end = _argv[2];
	_idx = 0;
	if _argc > 3 {
		_idx = _argv[3];
	}
	_d = _s[_idx,_end];
	_d = _d[1,_begin];
	_d;
}

TextBetween3
{
	_s = _argv[0];
	_begin = _argv[1];
	_end = _argv[2];
	_d = _s[_begin,_end];
	//_d = _d[1,_begin];
	_d;
}




