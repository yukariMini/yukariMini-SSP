				break;
			}
		}
	}
	FCLOSE(_file);
	FCHARSET(1);
	_txt += "\n[50]数据来自\_a[OnUrl,Http://www.ip138.com/]www.ip138.com\_a\n/
			\n\q[◇返回,OnOpenMenu]    \q[◇终了,OnIpEnd]";
