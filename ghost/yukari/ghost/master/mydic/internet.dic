IsIpAdress
{
	_ip = REPLACE(_argv[0],'.',',');
	_count = 0;
	_outofrange = 0;
	foreach _ip; _i {
		if (TOINT(_i) > 255 || TOINT(_i) < 0) && _i != '*' {
			_outofrange = 1;
			break;
		}
		_count ++;
	}
	if _count == 4 && _outofrange == 0 {
		1
	}
	else {
		0
	}
}

OnIpFound
{
	_txt = "\_q";
	_file = "var\\checkip.html";
	_buff = "";
	FCHARSET(127);
	if FOPEN(_file,'r') {
		for _buff = FREAD(_file); _buff != -1; _buff = FREAD(_file) {
			if '您查询的IP' _in_ _buff {
